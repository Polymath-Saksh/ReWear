# Copy this file to .env and fill in your actual values
# Database Configuration (Azure Cosmos DB for PostgreSQL)
DB_HOST=your-db-host
DB_PORT=6432 # Default port for Azure PostgreSQL Bouncer
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Azure Storage Configuration
AZURE_ACCOUNT_NAME=your-azure-account-name
AZURE_ACCOUNT_KEY=your-azure-account-key
AZURE_CONTAINER=your-container-name
MEDIA_URL=https://your-account.blob.core.windows.net/your-container/

# Django Security
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: Email Configuration
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
